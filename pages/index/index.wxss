/**index.wxss**/

/* @import "../../comm/listview/icontext/index.wxss"; */

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}
.cartitle{
	background-color: greenyellow;
	padding: 10rpx;
	margin-top: 15rpx;
	padding-left:15rpx; 
	margin-bottom: 15rpx;
}
.cartext{
	color: white;
	font-size: 14px;
	text-align: center;
	width: 100%;
}
.toprang {
    background-color: lightgreen;
    width: 100%;
    height: 500rpx;
    margin-bottom: 20rpx;
}

.textad {
    font-style: normal;
    font-size: 12px;
    color: "#999999";
    height: 20rpx;
}

.textadrang {
    padding-right: 15rpx;
    padding-left: 15rpx;
    width: 100%;
    overflow: hidden; /*超出部分隐藏*/
    white-space: nowrap; /*不换行*/
    text-overflow: ellipsis; /*超出部分文字以...显示*/
    text-align: center;
}

.carbrand {
    padding-top: 10px;
    padding-left: 10px;
    font-size: 30rpx;
    color: black;
}

.info {
    display: flex;
    flex-flow: column;
}

.carbrand-info {
    padding-top: 10px;
    padding-left: 10px;
    font-style: body;
    font-size: 60rpx;
    color: red;
}

.bottomview {
    width: 100%;
    height: 100rpx;
    margin-top: 60rpx;
    display: flex;
    flex-flow: row;
}

.bottomlineview {
    width: 100%;
    display: inline-block;
	align-content: center;
}

.blockview {
    width: 100%;
    display: flex;
    flex-flow: column;
    text-align: center;
}
.dataview{
	color: white;
	font-size: 22px;
}
